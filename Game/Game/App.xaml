            </Style>

            <Style TargetType="FlexLayout"
                x:Key="CharacterReadFlex">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Wrap" Value="Wrap" />
                <Setter Property="JustifyContent" Value="SpaceAround" />
                <Setter Property="AlignContent" Value="SpaceAround" />
            </Style>


            <!--ItemPopUp-->
            <Style TargetType="StackLayout"
                x:Key="CharacterItemPopup">
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="WidthRequest" Value="300" />
                <Setter Property="HeightRequest" Value="300" />
            </Style>

            <!-- Image -->
            <Style TargetType="Image"
                x:Key="ImageLargeStyle">
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="WidthRequest" Value="120" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Aspect" Value="Fill" />
            </Style>


            <Style TargetType="Image" x:Key="ImageItemCreatePageStyle" BasedOn="{StaticResource ImageLargeStyle}">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            </Style>

            <Style TargetType="Image" x:Key="ImageAboutPage">
                <Setter Property="MinimumHeightRequest" Value="10"/>
