<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="using:Game.Models"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local_enum="clr-namespace:Game.Models"
             x:Class="Game.Views.ItemCreatePage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" IconImageSource="icon_cancel.png"/>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" IconImageSource="icon_save.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <ScrollView>
            <StackLayout Style="{StaticResource OuterBoxStack}"
                Spacing="10">

                <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}" HorizontalOptions="CenterAndExpand"/>

                <Grid
                    RowSpacing="1"
                    ColumnSpacing="2"
                    VerticalOptions="Center"
                    Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0"
                        Text="Name:" 
                        Style="{StaticResource LabelStyle}"
                           HorizontalOptions="End"/>
                    
                    <Entry Grid.Row="0" Grid.Column="1"
                        Text="{Binding Data.Name}" 
                        Style="{StaticResource EntryStyle}"
                           HorizontalOptions="Start"/>

                    <Label Grid.Row="1" Grid.Column="0"
                        Text="Description:" 
                        Style="{StaticResource LabelStyle}"
                           HorizontalOptions="End"/>
                    
                    <Entry Grid.Row="1" Grid.Column="1"
                        Text="{Binding Data.Description}" 
                        Style="{StaticResource EntryStyle}"
                           HorizontalOptions="Start"/>

                    <Label Grid.Row="2" Grid.Column="0"
                        Text="Location:" 
                        Style="{StaticResource LabelStyle}"
                           HorizontalOptions="End"/>
                    
                    <Picker Grid.Row="2" Grid.Column="1"
                        ItemsSource="{x:Static local_enum:ItemLocationEnumHelper.GetListCharacter}" 
                        SelectedItem="{Binding Data.Location, Converter={StaticResource StringEnum}, Mode=TwoWay}" 
                        x:Name="LocationPicker" HorizontalOptions="Start"/>
                </Grid>
                    
                    <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="Center">
                        <!--Stack layout for Range-->
                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">

                            <Label 
                                Text="Range" 
                                Style="{StaticResource LabelStyle}"/>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                <Label 
                                        Text="{Binding Data.Range}" 
                                        x:Name="RangeValue"
                                        Style="{StaticResource ValueStyle}"
                                        Padding="0,0,10,0"
                                        HorizontalOptions="End"
                                        HorizontalTextAlignment="End"/>

                                <Stepper 
                                        Value="{Binding Data.Range, Mode=TwoWay}"
                                        ValueChanged="Range_OnStepperValueChanged"/>

                            </StackLayout>
                        </StackLayout>
                        
                        <!--stacklayout for Value-->
                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                            <Label 
                                Text="Value"
                                Style="{StaticResource LabelStyle}"/>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">
                        
                                <Label 
                                    Text="{Binding Data.Value}" 
                                    x:Name="ValueValue"
                                    Style="{StaticResource ValueStyle}"
                                    Padding="0,0,10,0"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"/>

                                <Stepper 
                                    Value="{Binding Data.Value, Mode=TwoWay}"
                                    ValueChanged="Value_OnStepperValueChanged"/>

                            </StackLayout>
                        </StackLayout>

                    <Label 
                        Text="Damage" 
                        Style="{StaticResource LabelStyle}"/>
                    
                    <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                        <Label 
                            Text="{Binding Data.Damage}" 
                            x:Name="DamageValue"
                            Style="{StaticResource ValueStyle}"
                            Padding="0,0,10,0"
                            HorizontalOptions="End"
                            HorizontalTextAlignment="End"/>

                        <Stepper 
                            Value="{Binding Data.Damage, Mode=TwoWay}"
                            ValueChanged="Damage_OnStepperValueChanged"/>
                    
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>