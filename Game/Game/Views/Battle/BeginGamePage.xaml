<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BeginGamePage"
             >

    <ContentPage.Content>

        <ScrollView Style="{StaticResource ScrollViewGamePage}">
            
            <StackLayout Orientation="Horizontal">
                <StackLayout Style="{StaticResource CardImageTextBox}">

                    <Label Text="This is the begin game page" />
                    <Button 
                            Text="Click to pick Characters" 
                            Clicked="ThankYouPage"
                             >
                    </Button>

                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>