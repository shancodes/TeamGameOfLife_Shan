<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BeginGamePage"
             >

    <ContentPage.Content>

        <ScrollView Style="{StaticResource ScrollViewHomePage}">

            <StackLayout Style="{StaticResource StackLayoutHomePage}">

                <!--Image for BeginGamePage page-->
                <StackLayout Style="{StaticResource HorizontalStack}" >
                    <Image
                         Source="logo_final.png"
                         Style="{StaticResource ImageLargeLogoStyle}"/>
                </StackLayout>

                <!--PickCharacters button-->

                <ImageButton Source="select_characters.png" Clicked="PickUpCharacterPage_Clicked" />

                <!--Game Over button-->
                <Button 
                    Text="Score Page" 
                    Clicked="ShowScoreButton_Clicked" >
                </Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>