<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.ScorePage">
    
    <NavigationPage.TitleView>
        <StackLayout Style="{StaticResource NavigationHeader}">
            <Label Text="Game Over" Style="{StaticResource TitleHeader}"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>

        <ScrollView>
            <StackLayout Style="{StaticResource CharacterOuterBoxStack}" >

                <StackLayout Style="{StaticResource CharacterStackBox}" >

                    <!--Game Date-->
                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >
                        <Label 
                               Text="Game Date: " 
                               Style="{StaticResource StyleItemReadLabelStyle}" />
                        <Label 
                                Text="{Binding Data.GameDate}" 
                                Style="{StaticResource StyleItemReadValueStyle}" />
                    </StackLayout>

                    <!--Score-->
                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >

                        <Label Text=" Your Score" Style="{StaticResource CenterMessageLargeStyle}"/>

                    </StackLayout>

                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >

                        <Label Text=" " x:Name="TotalScore" Style="{StaticResource CenterMessageLargeStyle}"/>

                    </StackLayout>

                    <!--List Of Characters-->
                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >

                        <Label Text="Characters" Style="{StaticResource CenterMessageStyle}"/>
                    </StackLayout>

                    <StackLayout Style="{StaticResource HorizontalReadItemStyle}" >

                        <FlexLayout x:Name="CharacterListFrame" />
                        
                    </StackLayout>

                    <!--List Of Monsters-->
                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >

                        <Label Text=" " x:Name="TotalKilled" FontSize="Medium" Style="{StaticResource ValueStyle}"/>

                        <Label Text="Monsters" Style="{StaticResource CenterMessageStyle}"/>

                        <Label Text="Killed" Style="{StaticResource CenterMessageStyle}"/>

                    </StackLayout>

                    <StackLayout Style="{StaticResource HorizontalReadItemStyle}" >

                        <FlexLayout x:Name="MonsterListFrame"/>

                    </StackLayout>

                    <!--List Of Items Collected-->
                    <StackLayout Style="{StaticResource StackLayoutItemReadStyle}" >

                        <Label Text=" " x:Name="TotalCollected" FontSize="Medium" Style="{StaticResource ValueStyle}"/>

                        <Label Text="Items" Style="{StaticResource CenterMessageStyle}"/>

                        <Label Text="Collected" Style="{StaticResource CenterMessageStyle}"/>

                    </StackLayout>

                    <StackLayout Style="{StaticResource HorizontalReadItemStyle}" >

                        <FlexLayout x:Name="ItemListFrame"/>

                    </StackLayout>

                    <StackLayout Style="{StaticResource HorizontalCenterStack}">

                        <ImageButton Source="done.png" Clicked="CloseButton_Clicked"/>

                    </StackLayout>

                </StackLayout>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>