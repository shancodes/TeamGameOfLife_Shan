<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage"
             BackgroundImageSource="inside_background.png">

    <ContentPage.Content>
        <ScrollView>

            <StackLayout Style="{StaticResource VerticalStack}">

                <Label Text="Get Ready for the Battle" Style="{StaticResource CenterMessageLargeStyle}"/>

                <Label Text="Characters" Style="{StaticResource NewRoundPageLabelStyle}"/>

                <FlexLayout x:Name="PartyListFrame" Style="{StaticResource FlexLayoutNextRoundPageStyle}"/>

                <Label Text="V/S" Style="{StaticResource CenterMessageLargeStyle}"></Label>

                <Label Text="Monsters" Style="{StaticResource NewRoundPageLabelStyle}"/>

                <FlexLayout x:Name="MonsterListFrame" Style="{StaticResource FlexLayoutNextRoundPageStyle}"/>

                <StackLayout Style="{StaticResource NewRoundPageStyle}"></StackLayout>

                <ImageButton Clicked="BeginButton_Clicked" Source="start.png"/>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>