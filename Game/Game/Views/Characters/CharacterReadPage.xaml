<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.CharacterReadPage"
             >

    <!--NavigationPage with Text-->
    <NavigationPage.TitleView >
        <Label  Text ="{Binding Title}"  Style="{StaticResource TitleHeader}"/>
    </NavigationPage.TitleView>

    <AbsoluteLayout
        Style="{StaticResource BasicAbsoluteLayout}">

        <StackLayout Style="{StaticResource Boundaries}">

            <ScrollView x:Name="ScrollView">
                <StackLayout Style="{StaticResource CharacterOuterBoxStack}" >

                    <StackLayout Style="{StaticResource CharacterStackBox}" >

                        <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}" HorizontalOptions="Center"/>

                        <!--Name-->
                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand">
                            <Label 
                               Text="Name: " 
                               Style="{StaticResource LabelStyle}"  HorizontalTextAlignment="Center"/>
                            <Label 
                                Text="{Binding Data.Name}" 
                                Style="{StaticResource ValueStyle}" HorizontalTextAlignment="Center" />
                        </StackLayout>

                        <!--Description-->
                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand">
                            <Label 
                                Text="Description: " 
                                Style="{StaticResource LabelStyle}" HorizontalTextAlignment="Center"/>
                            <Label 
                                Text="{Binding Data.Description}" 
                                Style="{StaticResource ValueStyle}" HorizontalTextAlignment="Center"/>
                        </StackLayout>

                        <!--Level-->
                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand">
                            <Label 
                                Text="Level: " 
                                Style="{StaticResource LabelStyle}"/>
                            <Label 
                                Text="{Binding Data.Level}" 
                                Style="{StaticResource ValueStyle}"/>
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Frame OutlineColor="Black" Padding="1">
                                <Grid Style="{StaticResource CharacterReadGridStyle}">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Column="0" Grid.Row="0"
                                       Text="Attribute" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="0"
                                       Text="Base Value" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="0"
                                       Text="Level Bonus" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="0"
                                       Text="Item Bonus" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="0"
                                       Text="Total Value" 
                                       Style="{StaticResource GridLabelStyle}"/>

                                    <!--Attack-->
                                    <Label Grid.Column="0" Grid.Row="1"
                                       Text="Attack" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="1"
                                       Text="{Binding Data.Attack}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="1"
                                       Text="{Binding Data.GetAttackLevelBonus}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="1"
                                       Text="{Binding Data.GetAttackItemBonus}"  
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="1"
                                       Text="{Binding Data.GetAttackTotal}"  
                                       Style="{StaticResource GridValueStyle}"/>

                                    <!--Defense-->
                                    <Label Grid.Column="0" Grid.Row="2"
                                       Text="Defense" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Data.Defense}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="2"
                                       Text="{Binding Data.GetDefenseLevelBonus}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="2"
                                       Text="{Binding Data.GetDefenseItemBonus}"  
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="2"
                                       Text="{Binding Data.GetDefenseTotal}"  
                                       Style="{StaticResource GridValueStyle}"/>

                                    <!--Speed-->
                                    <Label Grid.Column="0" Grid.Row="3"
                                       Text="Speed" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="3"
                                       Text="{Binding Data.Speed}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="3"
                                       Text="{Binding Data.GetSpeedLevelBonus}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="3"
                                       Text="{Binding Data.GetSpeedItemBonus}"  
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="3"
                                       Text="{Binding Data.GetSpeedTotal}"  
                                       Style="{StaticResource GridValueStyle}"/>

                                    <!--Max Health-->
                                    <Label Grid.Column="0" Grid.Row="4"
                                       Text="Max Health" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="4"
                                       Text="{Binding Data.MaxHealth}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="4"
                                       Text="{Binding Data.GetMaxHealthLevelBonus}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="4"
                                       Text="{Binding Data.GetMaxHealthItemBonus}"  
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="4"
                                       Text="{Binding Data.GetMaxHealthTotal}"  
                                       Style="{StaticResource GridValueStyle}"/>

                                    <!--Damage-->
                                    <Label Grid.Column="0" Grid.Row="5"
                                       Text="Damage" 
                                       Style="{StaticResource GridLabelStyle}"/>
                                    <Label Grid.Column="1" Grid.Row="5"
                                       Text="-" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="2" Grid.Row="5"
                                       Text="{Binding Data.GetDamageLevelBonus}" 
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="3" Grid.Row="5"
                                       Text="{Binding Data.GetDamageItemBonusString}"  
                                       Style="{StaticResource GridValueStyle}"/>
                                    <Label Grid.Column="4" Grid.Row="5"
                                       Text="{Binding Data.GetDamageTotalString}"
                                       Style="{StaticResource GridValueStyle}"/>
                                </Grid>
                            </Frame>
                        </StackLayout>

                    </StackLayout>

                    <FlexLayout 
                        Style="{StaticResource CharacterReadFlex}"
                        x:Name="ItemBox">
                    </FlexLayout>

                </StackLayout>
            </ScrollView>

            <!--Delete Done and Update buttons-->
            <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Spacing="30">

                <Button ImageSource="delete.png" Style="{StaticResource CharacterButtons}" Clicked="Delete_Clicked"></Button>
                <Button ImageSource="done.png" Style="{StaticResource CharacterButtons}" Clicked="Done_Clicked"></Button>
                <Button  ImageSource="update.png" Style="{StaticResource CharacterButtons}" Clicked="Update_Clicked"></Button>
                
            </StackLayout>
            
        </StackLayout>

        <!--The Item Popup-->
        <StackLayout x:Name="PopupLoadingView" 
                 BackgroundColor="{StaticResource PageBackgroundColor}" 
                 IsVisible="false" 
                 AbsoluteLayout.LayoutBounds=".5, .5,.5,.5" 
                 AbsoluteLayout.LayoutFlags="All">

            <StackLayout 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                >

                <Frame 
                    BorderColor="{StaticResource TriciaryTextColor}" Padding="1">
                    <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand" Padding="2">
                        <Image x:Name="PopupItemImage" Style="{StaticResource ImageLargeStyle}"/>

                        <Label x:Name="PopupItemName" Style="{StaticResource PopupItemTextStyle} " MaxLines="2" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" />
                        <Label x:Name="PopupItemDescription" Style="{StaticResource PopupItemTextStyle}" MaxLines="2" LineBreakMode="WordWrap"  HorizontalTextAlignment="Center"/>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand">
                            <Label Text="Location : " Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemLocation" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="CenterAndExpand">
                            <Label x:Name="PopupItemAttribute" Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemValue" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <Button x:Name="PopupCloseButton" 
                                Clicked="ClosePopup_Clicked" 
                                Text="Close"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout> 
</ContentPage>