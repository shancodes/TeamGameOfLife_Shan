<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage"
             >

    <ContentPage.Content>

        <ScrollView Orientation="Vertical" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never" Padding="10">

            <FlexLayout x:Name="flexLayout"
                        AlignContent="SpaceAround"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Direction="Column">
                <!--AlignItems="Center"
                        Direction="Column">-->
                <!--<FlexLayout Direction="Row">-->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <StackLayout Style="{StaticResource CardImageTextBox}" Padding="50">

                        <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageLargeStyle}"
                        Clicked="DungeonButton_Clicked"/>

                        <Label 
                        Text="Battle"
                        Style="{StaticResource CenterMessageStyle}"/>


                    </StackLayout>

                    <StackLayout Style="{StaticResource CardImageTextBox}" Padding="50">
                        <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageLargeStyle}"
                        Clicked="AutobattleButton_Clicked"/>

                        <Label 
                        Text="Auto Battle"
                        Style="{StaticResource CenterMessageStyle}"/>

                    </StackLayout>

                </StackLayout>
                    
                <!--</FlexLayout>
                <FlexLayout Direction="Row">-->

                    <StackLayout Style="{StaticResource CardImageTextBox}">

                        <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageLargeStyle}"
                        Clicked="VillageButton_Clicked"/>

                        <Label 
                        Text="Village"
                        Style="{StaticResource CenterMessageStyle}"/>

                    </StackLayout>
                <!--</FlexLayout>-->
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>