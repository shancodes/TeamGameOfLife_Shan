<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             BackgroundImageSource ="homepage.png">

    <ContentPage.Content>
        <ScrollView Style="{StaticResource ScrollViewHomePage}">
            
            <StackLayout Style="{StaticResource StackLayoutHomePage}">

                <!--Image for home page-->
                <StackLayout Style="{StaticResource HorizontalStack}" >
                    <Image
                         Source="logo_final.png"
                         Style="{StaticResource ImageLargeLogoStyle}"/>
                </StackLayout>

                <!--Enter button-->
                <ImageButton
                    Source="enter.png"
                    Clicked="GameButton_Clicked"/>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>