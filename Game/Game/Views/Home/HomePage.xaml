<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage">

    <ContentPage.Content>
        <ScrollView Style="{StaticResource ScrollViewHomePage}">
            
            <StackLayout
                Style="{StaticResource StackLayoutHomePage}">

                <!--Image for home page-->
                <StackLayout Style="{StaticResource HorizontalStack}" HorizontalOptions="Center">
                    <Image
                         Source="logo_medium.png"
                         Style="{StaticResource ImageLargeLogoStyle}"/>
                </StackLayout>

                <!--Enter button-->
                <Button
                    Text="Enter"
                    Clicked="GameButton_Clicked"/>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>